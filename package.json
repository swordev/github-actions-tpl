{
  "name": "@swordev/github-actions-tpl",
  "version": "1.0.0",
  "description": "CLI tool for creating GitHub Actions Workflow automatically",
  "keywords": [
    "cli",
    "github",
    "github actions",
    "workflow",
    "publish",
    "build",
    "npm",
    "template",
    "tpl"
  ],
  "homepage": "https://github.com/swordev/github-actions-tpl.git",
  "bugs": {
    "url": "https://github.com/swordev/github-actions-tpl.git/issues",
    "email": "juanrgm724@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swordev/github-actions-tpl.git"
  },
  "license": "MIT",
  "author": {
    "name": "Juanra GM",
    "email": "juanrgm724@gmail.com",
    "url": "https://github.com/juanrgm"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": "lib/bin.js",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc -p src",
    "format": "prettier -w ./src/**/*.ts",
    "format:check": "prettier -c ./src/**/*.ts",
    "prepare": "npm run build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "watch": "tsc -p src -w"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "semver": "^7.3.5",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^2.0.4",
    "@types/commander": "^2.12.2",
    "@types/node": "^16.11.6",
    "@types/semver": "^7.3.9",
    "@types/yaml": "^1.9.7",
    "conventional-changelog-cli": "^2.1.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14"
  }
}
